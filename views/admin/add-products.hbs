<script>
    var errorName = document.getElementById('nameerr')
    var priceerr = document.getElementById('priceerr')
    var descripiton = document.getElementById('descripitonerr')
    function validateName() {
        const name = document.getElementById('Name').value;
        if (name == "") {
            errorName.innerHTML = 'Enter your Name'
            return false
        }
        if (!name.match(/^[a-z A-Z]*$/)) {
            errorName.innerHTML = 'alhpabets are only allowed'
            return false
        }
        errorName.innerHTML = null
        return true

    }


    
    function validprice() {
        const price = document.getElementById('price').value

        if (price == "") {
            priceerr.innerHTML = "Cant be empty"

            return false

        }
         if (!price.match(/^[0-9]*$/)) {
            priceerr.innerHTML = 'Number are only allowed'
            return false
        }
      
        priceerr.innerHTML = null
        return true

    }
    function discripiton() {
        const dis = document.getElementById('descripiton').value
        if (dis == "") {
            descripiton.innerHTML = "Cannot be empty"
            return false
        }
        descripiton.innerHTML = null
        return true


    }


    function validation() {
        if (!validateName()||!validprice() ||!discripiton() ) {
            return false
        }
        return true
    }
</script>
