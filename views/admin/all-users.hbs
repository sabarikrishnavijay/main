
<section>
    <div class="container">
        <div class="row mt-5">
            
          
        </div>
        <table class="table mt-5" id="tab">
  <thead>
    <tr>
      <th scope="col">status</th>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
 
      <th scope="col">Number</th>
      <th scope="col">Status</th>
      <th scope="col">Remove</th>
      
    </tr>
  </thead>
  <tbody>
      {{#each users}}
    <tr>
    
    
      {{!-- <th scope="row">1</th> --}}
      <td>
        {{#if_eq this.status 'active'}}
        <div style="width: 50px;height:50px ; background-color:rgb(14, 255, 14)" ></div>
        {{else}}
        
        <div style="width: 50px;height:50px ; background-color:rgb(255, 7, 7)" ></div>
        {{/if_eq}}

      </td>
      <td>{{this._id}}</td>
      <td>{{this.Name}}</td>
      <td>{{this.Email}}</td>
    
      <td>{{this.Number}}</td>
      <td> {{this.status}}</td>
      <td>
                 <a href="/admin/edit-user/{{this._id}}" class="btn btn-primary">Edit</a>
       <a href="/admin/delete-user/{{this._id}}" onclick="return confirm('do you want to delect {{this.Name}}')" class="btn btn-danger">Delect</a>
       </td>
    </tr>
     {{/each}}
  </tbody>
</table>
    </div>
</section>