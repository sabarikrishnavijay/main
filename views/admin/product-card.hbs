<div class="container d-flex ps-5 ">

    <div class="row">
        <div class="ps-5">
             <a href="/admin/add-product" class="btn btn-success  col-2  mb-3" style="width: 200px;">Add Product</a>
            {{#each products}}
            <div class="card card-body" style="width: 720px;">
                <div class="media ">
                    <div class="mr-2 mb-3 mb-lg-0">
                        {{#each images~}}
                        <img src="/product-images/{{this}}" width="150" height="150" alt="">
                        {{/each}}

                    </div>

                    <div class="media-body">
                        <h6 class="media-title font-weight-semibold">
                            <a href="#" data-abc="true">{{this.Name}}</a>
                        </h6>
                        <h6 class="media-title font-weight-semibold">
                            <a href="#" data-abc="true">{{this.Catagory}}</a>
                        </h6>

                       

                        <p class="mb-3"> </p>

                   
                    </div>

                    <div class="mt-3 mt-lg-0 ml-lg-3">
                        <h3 class="mb-0 font-weight-semibold">Rs:{{this.Price}}</h3>

                        <div>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>

                        </div>

                       

                        <a href="/admin/edit-product/{{this._id}}">
                            <button class="btn btn-warning mt-4 text-white">

                                Edit</button>
                        </a>

                        <a href="/admin/delete-product/{{this._id}}"
                            onclick="return confirm('do you want to delect {{this.Name}}')"
                            class="btn btn-danger mt-4">Delect</a>
                    </div>
                </div>
            </div>
            {{/each}}













        </div>
    </div>
</div>

