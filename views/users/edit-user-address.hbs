<section class="d-flex justify-content-center">
    <div class="container  m-5 d-flex justify-content-center" style="background-color:rgb(218, 218, 218) ; width: 700px;height: auto;border-radius: 25px;box-shadow: 100px;">
        <div class="row">

            <div class=" col-md-12">
                <h2 class="text-center">
                    Edit Address
                </h2>
                <form action="/edit-user-address/{{address._id}}" method="post" style="width: 500px;">
                 <input type="text" name="userId" class="form-control" value="{{address.userId}}"hidden>
                    <label for="">First Name</label>
                    <input type="text" name="FirstName" class="form-control" value="{{address.FirstName}}">
                    <label for="">Last Name</label>
                    <input type="text" name="LastName" class="form-control" value="{{address.LastName}}">
                    <label for="">Mobile</label>
                    <input type="text" name="mobile" class="form-control" value="{{address.mobile}}">
                    <label for="">Address</label>
                    <input type="text" name="address" class="form-control" value="{{address.address}}">
                    

                   
                    

                    

                    <button type="submit" class="btn btn-success my-4">Submit</button>

                </form>
            </div>
        </div>
    </div>
</section>